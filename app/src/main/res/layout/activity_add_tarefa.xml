<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddTarefa">

    <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.171"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.103">

        <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Tarefa"
                android:textColor="@color/texto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
                app:layout_constraintHorizontal_bias="0.055"/>

        <TextView
                android:id="@+id/textSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicione uma tarefa que ainda será feita"
                android:textColor="@color/texto"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                android:layout_marginTop="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
                app:layout_constraintHorizontal_bias="0.055" tools:ignore="RtlHardcoded"/>


        <EditText
                android:id="@+id/edtAddTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título da tarefa"
                android:textColor="@color/texto"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                android:layout_margin="14dp"
                android:background="@color/caixaTexto"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
                app:layout_constraintHorizontal_bias="0.055" tools:ignore="RtlHardcoded"/>

        <EditText
                android:id="@+id/edtDescrTarefa"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:hint="Descrição da tarefa"
                android:textColor="@color/texto"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                android:layout_margin="14dp"
                android:background="@color/caixaTexto"
                android:layout_gravity="end"
                android:gravity="top"
                android:textAlignment="gravity"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
                app:layout_constraintHorizontal_bias="0.055" tools:ignore="RtlHardcoded"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opcional"
                android:textColor="@color/texto"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
                app:layout_constraintHorizontal_bias="0.055"/>


    </LinearLayout>
    <Button
            android:id="@+id/btnAddTarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/retanguladois"
            android:fontFamily="@font/roboto"
            android:text="Criar tarefa"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>